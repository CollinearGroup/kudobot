{
  "name": "kudobot",
  "version": "1.1.4",
  "description": "Bot Builder v4 echo bot sample",
  "author": "Microsoft",
  "license": "MIT",
  "main": "./lib/index.js",
  "scripts": {
    "build": "tsc --build",
    "postinstall": "npm run build",
    "start": "tsc --build && node ./lib/index.js",
    "test": "jest --collect-coverage",
    "test-watch": "jest --watchAll",
    "test-staged": "jest --coverage --changedSince=master",
    "watch": "nodemon --watch ./src -e ts --exec \"npm run start\"",
    "make-badges": "istanbul-badges-readme"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com"
  },
  "dependencies": {
    "botbuilder": "~4.9.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fs": "0.0.1-security",
    "replace": "~1.1.1"
  },
  "devDependencies": {
    "@types/dotenv": "6.1.1",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.10",
    "@types/restify": "8.4.2",
    "husky": "^4.2.5",
    "istanbul-badges-readme": "^1.0.5",
    "jest": "^26.4.2",
    "nodemon": "~2.0.4",
    "prettier": "2.1.1",
    "pretty-quick": "^3.0.0",
    "ts-jest": "^26.2.0",
    "typescript": "~3.9.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick && npm run test-staged"
    }
  }
}
